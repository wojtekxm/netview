<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <resource-ref>
        <description>MySQL JDBC DataSource</description>
        <res-ref-name>jdbc/MySQLDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <servlet>
        <servlet-name>AddController</servlet-name>
        <servlet-class>zesp03.servlet.AddController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Details</servlet-name>
        <servlet-class>zesp03.servlet.Details</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeviceInfo</servlet-name>
        <servlet-class>zesp03.servlet.DeviceInfo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MakeSurvey</servlet-name>
        <servlet-class>zesp03.servlet.MakeSurvey</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowControllersServlet</servlet-name>
        <servlet-class>zesp03.servlet.ShowControllersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>showDevices</servlet-name>
        <servlet-class>zesp03.servlet.showDevices</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StatusSmall</servlet-name>
        <servlet-class>zesp03.servlet.StatusSmall</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>zesp03.servlet.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Style</servlet-name>
        <servlet-class>zesp03.servlet.Style</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>AddController</servlet-name>
        <url-pattern>/AddController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Details</servlet-name>
        <url-pattern>/details</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeviceInfo</servlet-name>
        <url-pattern>/deviceinfo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MakeSurvey</servlet-name>
        <url-pattern>/make-survey</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowControllersServlet</servlet-name>
        <url-pattern>/ShowControllersServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>showDevices</servlet-name>
        <url-pattern>/showDevices</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StatusSmall</servlet-name>
        <url-pattern>/status-small</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Style</servlet-name>
        <url-pattern>/style</url-pattern>
    </servlet-mapping>


</web-app>