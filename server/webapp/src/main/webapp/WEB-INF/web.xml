<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <listener>
        <listener-class>zesp03.webapp.config.FlywayConfig</listener-class>
    </listener>
    <listener>
        <listener-class>zesp03.webapp.config.DatabaseConfig</listener-class>
    </listener>
    <listener>
        <listener-class>zesp03.webapp.config.RootCreation</listener-class>
    </listener>

    <filter>
        <filter-name>StaticResourceFilter</filter-name>
        <filter-class>zesp03.webapp.filter.StaticResourceFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>zesp03.webapp.filter.AuthenticationFilter</filter-class>
    </filter>
    <filter>
        <filter-name>ForNormalFilter</filter-name>
        <filter-class>zesp03.webapp.filter.ForNormalFilter</filter-class>
    </filter>
    <filter>
        <filter-name>ForAdminFilter</filter-name>
        <filter-class>zesp03.webapp.filter.ForAdminFilter</filter-class>
    </filter>
    <filter>
        <filter-name>ForRootFilter</filter-name>
        <filter-class>zesp03.webapp.filter.ForRootFilter</filter-class>
    </filter>
    <filter>
        <filter-name>DynamicHtmlFilter</filter-name>
        <filter-class>zesp03.webapp.filter.DynamicHtmlFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>StaticResourceFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ForNormalFilter</filter-name>
        <url-pattern>/api/all-controllers</url-pattern>
        <url-pattern>/api/all-devices</url-pattern>
        <url-pattern>/api/controller</url-pattern>
        <url-pattern>/api/device</url-pattern>
        <url-pattern>/api/change-password</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ForAdminFilter</filter-name>
        <url-pattern>/api/make-survey</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ForRootFilter</filter-name>
        <url-pattern>/api/all-users</url-pattern>
        <url-pattern>/api/block-user</url-pattern>
        <url-pattern>/api/create-user</url-pattern>
        <url-pattern>/api/delete-user</url-pattern>
        <url-pattern>/api/user</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>DynamicHtmlFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>Spring Dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>/WEB-INF/spring.xml</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>Spring Dispatcher</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
</web-app>