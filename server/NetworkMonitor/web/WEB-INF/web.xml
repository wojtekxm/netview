<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <listener>
        <listener-class>zesp03.core.Database</listener-class>
    </listener>
    <listener>
        <listener-class>zesp03.core.FirstAdminCreation</listener-class>
    </listener>

    <context-param>
        <param-name>first-admin-name</param-name>
        <param-value>admin0</param-value>
    </context-param>
    <context-param>
        <param-name>first-admin-reset-password</param-name>
        <param-value>zer0</param-value>
    </context-param>

    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>zesp03.filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <servlet-name>AddController</servlet-name>
        <servlet-name>Details</servlet-name>
        <servlet-name>DeviceInfo</servlet-name>
        <servlet-name>MakeSurvey</servlet-name>
        <servlet-name>RemoveController</servlet-name>
        <servlet-name>ShowControllers</servlet-name>
        <servlet-name>ShowDetailsController</servlet-name>
        <servlet-name>StatusSmall</servlet-name>
        <servlet-name>Style</servlet-name>
        <url-pattern>/Controllers.jsp</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>AddController</servlet-name>
        <servlet-class>zesp03.servlet.AddController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Details</servlet-name>
        <servlet-class>zesp03.servlet.Details</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeviceInfo</servlet-name>
        <servlet-class>zesp03.servlet.DeviceInfo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MakeSurvey</servlet-name>
        <servlet-class>zesp03.servlet.MakeSurvey</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowControllers</servlet-name>
        <servlet-class>zesp03.servlet.ShowControllers</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowDetailsController</servlet-name>
        <servlet-class>zesp03.servlet.ShowDetailsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveController</servlet-name>
        <servlet-class>zesp03.servlet.RemoveController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StatusSmall</servlet-name>
        <servlet-class>zesp03.servlet.StatusSmall</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>zesp03.servlet.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Style</servlet-name>
        <servlet-class>zesp03.servlet.Style</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>zesp03.servlet.Login</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddController</servlet-name>
        <url-pattern>/AddController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Details</servlet-name>
        <url-pattern>/details</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeviceInfo</servlet-name>
        <url-pattern>/deviceinfo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MakeSurvey</servlet-name>
        <url-pattern>/make-survey</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowControllers</servlet-name>
        <url-pattern>/ShowControllers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowDetailsController</servlet-name>
        <url-pattern>/ShowDetailsController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveController</servlet-name>
        <url-pattern>/RemoveController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StatusSmall</servlet-name>
        <url-pattern>/status-small</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Style</servlet-name>
        <url-pattern>/style</url-pattern>
    </servlet-mapping>
</web-app>