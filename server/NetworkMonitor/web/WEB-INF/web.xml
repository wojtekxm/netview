<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <context-param>
        <param-name>root-name</param-name>
        <param-value>rrr</param-value>
    </context-param>
    <context-param>
        <param-name>root-password</param-name>
        <param-value>111</param-value>
    </context-param>

    <listener>
        <listener-class>zesp03.core.Database</listener-class>
    </listener>
    <listener>
        <listener-class>zesp03.core.RootCreation</listener-class>
    </listener>

    <filter>
        <filter-name>StaticResourceFilter</filter-name>
        <filter-class>zesp03.filter.StaticResourceFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>zesp03.filter.AuthenticationFilter</filter-class>
    </filter>
    <filter>
        <filter-name>ForNormalFilter</filter-name>
        <filter-class>zesp03.filter.ForNormalFilter</filter-class>
    </filter>
    <filter>
        <filter-name>ForAdminFilter</filter-name>
        <filter-class>zesp03.filter.ForAdminFilter</filter-class>
    </filter>
    <filter>
        <filter-name>ForRootFilter</filter-name>
        <filter-class>zesp03.filter.ForRootFilter</filter-class>
    </filter>
    <filter>
        <filter-name>DynamicHtmlFilter</filter-name>
        <filter-class>zesp03.filter.DynamicHtmlFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>StaticResourceFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ForNormalFilter</filter-name>
        <servlet-name>AllControllersServlet</servlet-name>
        <servlet-name>ControllerServlet</servlet-name>
        <servlet-name>DeviceServlet</servlet-name>
        <servlet-name>StatusServlet</servlet-name>
        <servlet-name>StatusSmallServlet</servlet-name>
        <servlet-name>StyleServlet</servlet-name>
        <url-pattern>/api/all-controllers</url-pattern>
        <url-pattern>/api/all-devices</url-pattern>
        <url-pattern>/api/controller</url-pattern>
        <url-pattern>/api/device</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ForAdminFilter</filter-name>
        <servlet-name>AddControllerServlet</servlet-name>
        <servlet-name>MakeSurveyServlet</servlet-name>
        <servlet-name>RemoveControllerServlet</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ForRootFilter</filter-name>
        <servlet-name>AllUsersServlet</servlet-name>
        <servlet-name>BlockPasswordServlet</servlet-name>
        <servlet-name>NewUserServlet</servlet-name>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/api/all-users</url-pattern>
        <url-pattern>/api/block-user</url-pattern>
        <url-pattern>/api/create-new-user</url-pattern>
        <url-pattern>/api/delete-user</url-pattern>
        <url-pattern>/api/user</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>DynamicHtmlFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>